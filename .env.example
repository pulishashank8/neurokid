# ==========================================
# NeuroKid Environment Configuration
# ==========================================

# ------------------------------------------
# Required: Database
# ------------------------------------------
DATABASE_URL=postgresql://username:password@localhost:5432/neurokid
DIRECT_URL=postgresql://username:password@localhost:5432/neurokid

# ------------------------------------------
# Required: Authentication
# ------------------------------------------
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-32-character-minimum-secret-key-here-32char

# ------------------------------------------
# Required: PHI Encryption
# ------------------------------------------
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# This key encrypts therapy notes, emergency cards, and other PHI
# BACKUP THIS KEY SECURELY - losing it means losing all encrypted data
ENCRYPTION_KEY=your-64-character-hex-encryption-key-for-phi-protection-here

# ------------------------------------------
# Required: Email Service (Resend)
# ------------------------------------------
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY=re_your_resend_api_key_here
EMAIL_FROM=no-reply@yourdomain.com

# ------------------------------------------
# Optional: OAuth (Google Sign-In)
# ------------------------------------------
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ------------------------------------------
# Optional: AI Features
# ------------------------------------------
# Groq API for AI chat (https://console.groq.com/keys)
GROQ_API_KEY=gsk_your_groq_api_key

# Google Gemini API for AI features (https://aistudio.google.com/app/apikey)
GOOGLE_API_KEY=your-google-api-key

# ------------------------------------------
# Optional: Redis (for caching & rate limiting)
# ------------------------------------------
REDIS_URL=redis://localhost:6379

# ------------------------------------------
# Optional: Google Places API
# ------------------------------------------
GOOGLE_PLACES_API_KEY=your-google-places-api-key

# ------------------------------------------
# Optional: Supabase (for storage & realtime)
# ------------------------------------------
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ------------------------------------------
# Environment
# ------------------------------------------
NODE_ENV=development

# ------------------------------------------
# Public App URL (for emails and redirects)
# ------------------------------------------
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ------------------------------------------
# SECURITY: CAPTCHA (Optional - Recommended for production)
# ------------------------------------------
# Choose provider: 'hcaptcha' or 'recaptcha'
# Get keys from: https://www.hcaptcha.com/ or https://www.google.com/recaptcha
# CAPTCHA_PROVIDER=hcaptcha
# CAPTCHA_SECRET_KEY=0x0000000000000000000000000000000000000000
# NEXT_PUBLIC_CAPTCHA_SITE_KEY=10000000-ffff-ffff-ffff-000000000001
# CAPTCHA_MIN_SCORE=0.5  # For reCAPTCHA v3 only

# ------------------------------------------
# SECURITY: MFA / 2FA (Optional)
# ------------------------------------------
# MFA issuer name shown in authenticator apps
# MFA_ISSUER_NAME=NeuroKid

# ------------------------------------------
# SECURITY: Sentry Error Tracking (Optional)
# ------------------------------------------
# Get DSN from: https://sentry.io/
# SENTRY_DSN=https://xxx@yyy.ingest.sentry.io/zzz
# SENTRY_ENVIRONMENT=production
# SENTRY_TRACES_SAMPLE_RATE=0.1

# ------------------------------------------
# SECURITY: External Security Webhook (Optional)
# ------------------------------------------
# Send security events to external SIEM
# SECURITY_WEBHOOK_URL=https://your-siem.com/webhook

# ------------------------------------------
# SECURITY: Development Login (Optional - NEVER use in production)
# ------------------------------------------
# These allow login without database in development ONLY
# Generate password hash with: node -e "console.log(require('bcryptjs').hashSync('your-password', 10))""console.log(require('bcryptjs').hashSync('your-password', 10))"
# ALLOW_DEV_LOGIN_WITHOUT_DB=true
# DEV_AUTH_EMAIL=dev@example.com
# DEV_AUTH_PASSWORD_HASH=$2a$10$...  # bcrypt hash of password
# DEV_AUTH_ROLES=PARENT,ADMIN
