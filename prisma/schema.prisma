  country     String?
  createdAt   DateTime @default(now())

  @@index([channel, createdAt])
  @@index([utmCampaign])
  @@index([userId])
}

/// Feature flags for toggling features - Pillar 24
model FeatureFlag {
  id             String   @id @default(cuid())
  key            String   @unique
  name           String
  description    String?
  isEnabled      Boolean  @default(false)
  rolloutPercent Int      @default(100) // 0-100 percentage rollout
  targetRoles    Json? // ["PARENT", "PROVIDER"]
  targetUserIds  Json? // Specific user IDs for targeting
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

/// Deploy events for changelog tracking - Pillar 25
model DeployEvent {
  id             String   @id @default(cuid())
  version        String
  gitCommit      String?
  changesSummary String?  @db.Text
  status         String // SUCCESS, FAILED
  environment    String   @default("PRODUCTION")
  deployedAt     DateTime @default(now())
  metadata       Json?

  @@index([deployedAt])
  @@index([version])
}

/// Owner digest email configuration - Pillar 18
model DigestConfig {
  id             String    @id @default(cuid())
  digestType     String    @unique // DAILY, WEEKLY, MONTHLY
  isEnabled      Boolean   @default(true)
  sendTime       String    @default("08:00") // HH:mm format
  recipientEmail String
  lastSentAt     DateTime?
  updatedAt      DateTime  @updatedAt
}


// Pillar 20: Co-Founder AI Agent Reports
model CoFounderReport {
  id               String   @id @default(cuid())
  sentAt           DateTime
  recipientEmail   String
  executiveSummary String   @db.Text
  reportData       Json     // Full ExecutiveReport from AI agent
  attachmentUrls   String[] // URLs to Excel/PDF attachments
  agentSessionId   String   // Link to reasoning session
  createdAt        DateTime @default(now())

  @@index([sentAt])
  @@index([recipientEmail])
}
